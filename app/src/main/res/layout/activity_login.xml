<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4ABEFF"
    tools:context="system.oa.com.oaprototype.LoginActivity">

    <View
        android:id="@+id/view_icon"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/view_yuanjiao"></View>

    <EditText
        android:id="@+id/et_username"
        android:layout_width="230dp"
        android:layout_height="36dp"
        android:layout_below="@id/view_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/edittext_yuanjiao"
        android:hint="账号"
        android:textColorHint="#A7A6A6"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="230dp"
        android:layout_height="36dp"
        android:layout_below="@+id/et_username"
        android:textColorHint="#A7A6A6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:background="@drawable/edittext_yuanjiao"
        android:hint="密码"
        android:password="true"
        android:textSize="18dp" />


    <LinearLayout
        android:id="@+id/ll_ck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/et_password"
        android:layout_below="@id/et_password"
        android:orientation="horizontal">

        <cn.refactor.library.SmoothCheckBox
            android:id="@+id/cb_isSavePasswd"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="8dp"
            android:paddingTop="10dp"
            app:color_checked="#447eeb" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="记住密码"
            android:textColor="#ffffff"
            android:textSize="18dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:layout_below="@id/ll_ck"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@drawable/button_yuanjiao2"
        android:gravity="center"
        android:text="登录"
        android:textColor="#7D7D7D"
        android:textSize="20dp" />


</RelativeLayout>
